{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-electron",
    "rootDir": "./electron",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react",
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": [
    "electron/**/*"
  ],
  "exclude": [
    "node_modules",
    "electron/**/*.test.ts",
    "electron/**/*.test.js"
  ]
}
