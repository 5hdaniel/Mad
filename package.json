{
  "name": "magic-audit",
  "version": "1.1.0",
  "description": "Magic Audit - Export and archive iMessage conversations and emails",
  "main": "electron/main.js",
  "scripts": {
    "start": "npm run build:preload && concurrently \"npm run dev:react\" \"npm run dev:electron\" \"npm run watch:preload\"",
    "dev": "npm run build:preload && concurrently \"npm run dev:react\" \"npm run dev:electron\" \"npm run watch:preload\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build:preload": "esbuild electron/preload.ts --bundle --platform=node --outfile=electron/preload.js --external:electron",
    "watch:preload": "esbuild electron/preload.ts --bundle --platform=node --outfile=electron/preload.js --external:electron --watch",
    "build": "npm run build:preload && npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "package": "npm run build && dotenv -e .env.local -- electron-builder",
    "package:dev": "npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --dir",
    "package:unsigned": "npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "postinstall": "electron-rebuild && npm run build:preload",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint electron src",
    "lint:fix": "eslint electron src --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "deps:check": "depcheck",
    "deps:check-ci": "depcheck --json | node -e \"const d=JSON.parse(require('fs').readFileSync(0,'utf-8')); if(d.dependencies.length||d.missing&&Object.keys(d.missing).length){console.error('Unused or missing deps found'); process.exit(1)}\"",
    "prepare": "husky"
  },
  "keywords": [
    "electron",
    "react",
    "audit",
    "archive",
    "imessage",
    "outlook"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@electron/notarize": "^2.4.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.0",
    "depcheck": "^1.4.7",
    "dotenv-cli": "^7.4.2",
    "electron": "^35.7.5",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.27.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^6.2.0",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@azure/msal-node": "^2.15.0",
    "@azure/msal-node-extensions": "^1.3.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@supabase/supabase-js": "^2.38.0",
    "axios": "^1.7.9",
    "better-sqlite3-multiple-ciphers": "^11.6.0",
    "canvas-confetti": "^1.9.3",
    "dotenv": "^16.4.5",
    "electron-log": "^5.2.2",
    "electron-updater": "^6.3.9",
    "googleapis": "^128.0.0",
    "isomorphic-fetch": "^3.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-joyride": "^2.9.2",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.realestate.archiveapp",
    "productName": "MagicAudit",
    "publish": {
      "provider": "github",
      "owner": "5hdaniel",
      "repo": "Mad",
      "private": false
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "sign": true,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "afterSign": "scripts/notarize.js",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}
